{
  "name": "llm-usage-widget",
  "version": "1.0.0",
  "description": "System tray widget for monitoring LLM API usage",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node -e \"const fs=require('fs');const p=require('path');['index.html','styles.css'].forEach(f=>{const src=p.join('src/renderer',f);const dest=p.join('dist/renderer',f);fs.mkdirSync(p.dirname(dest),{recursive:true});fs.copyFileSync(src,dest);})\"",
    "start": "npm run build && electron .",
    "start:debug": "npm run build && electron . --debug",
    "dev": "npm run build && electron . --debug",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "author": "Ayden Marshall",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.33",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.openclaw.llm-usage-widget",
    "productName": "LLM Usage Widget",
    "target": "nsis",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ]
  }
}
